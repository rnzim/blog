              <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </p>
          </div>
          <hr>
        
        <% articles.forEach(article =>{ %>
                 
       <hr>
        <div class="card">
            <div class="card-header">
                    <%= article.title  %>
                    
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= article.slug  %>">Ler</a>
            </div>
        </div>
        <% })  %>
     </div>
</body>

