<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    
    
    <div class="container"> 
     <hr>
      <div class="card">
        <div class="card-header">
        <h2>Novo Artigo</h2>
        </div>
        <div class="card-body">
        <form action="/articles/save" method="post">
            <input type="text" placeholder="Titulo"  class="form-control" name="title">
            <hr>
            <textarea name="body" id="art" class="form-control"></textarea>
            <hr>
            <select name="category" id="" class="form-control">
              <% category.forEach(category =>{ %>
                  <option value="<%=category.id%>"><%=category.title%></option>
             <% })%>
             
            </select>
            <hr>
            <button class="btn btn-success">Publicar</button>
           
            <hr>

           
        </form>
       </div>
    </div>
  </div>
  <script src="/tinymce/js/tinymce/tinymce.min.js"></script>
  <script>
    tinymce.init({
      selector: "#art",
      Plugin:[
        'advlist link media save preview autolink link wordcount preview table emoticons'
      ]
    })
    
   
  </script>
</body>

<%- include('../../partials/footer.ejs') %>