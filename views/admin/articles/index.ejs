<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    
    <div class="container">
        <br>
        
        <h3>Artigos</h3>
        <a href="articles/new" class="btn btn-success">Novo Artigo</a>
        <hr>
        <table class="table table-bordered">
            <thead><th>ID</th><th>Titulo</th> <th>Slug</th><th>Cartegoria</th> </thead>
           
            <tbody>
            <% article.forEach(article =>{ %>
                <tr>   <td><%=article.id %></td> <td><%=article.title %></td> <td><%=article.slug %></td>
                <td>
                    <%=article.category.title %> 
                </td> <td>
                    <a class="btn btn-warning" href="/article/edit/<%= article.id %>" style="display: block; margin-bottom: 5px;">Editar</a>

                    <a class="btn btn-primary" href="/<%= article.slug %>" style="display: block; margin-bottom: 5px;">Ler</a>
                    
                    <form action="/articles/delete" method="post" id="form">
                    <input type="hidden" name="id" value="<%= article.id %>" style="display: inline;">
                    <button class="btn btn-danger">Deletar</button>
                </form></td> </tr>
                <%  })%>
          
            </tbody>
           
        </table>
    </div>
</body>

<%- include('../../partials/footer.ejs') %>
    